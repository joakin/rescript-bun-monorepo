{
  "name": "rescript-bun-monorepo",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "catalog": {
      "rescript": "^12.0.0",
      "rescript-bun": "^2.1.0"
    }
  },
  "scripts": {
    "build": "rescript",
    "clean": "rescript clean",
    "dev": "rescript watch",
    "format": "rescript format",
    "test": "bun test ./packages/*/src/**/*_test.res.js",
    "test:watch": "bun test --watch ./packages/*/src/**/*_test.res.js"
  },
  "dependencies": {
    "@rescript-bun-monorepo/common": "workspace:*",
    "@rescript-bun-monorepo/app": "workspace:*"
  },
  "devDependencies": {
    "rescript": "catalog:",
    "rescript-bun": "catalog:"
  },
  "packageManager": "bun@1.3.5"
}
